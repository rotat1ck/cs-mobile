<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:swiper.Controls"
             x:Class="swiper.MainPage">

    <Grid Padding="0,40" x:Name="MainGrid" WidthRequest="{OnIdiom -1, Tablet=400, Desktop=400}"
          RowDefinitions="400,*" >
        <Grid Grid.Row="1" Padding="30" RowDefinitions="Auto,Auto,Auto,Auto">
            <Label Text="Likes" />
            <Label x:Name="likeLabel" Grid.Row="1" Text="0" FontSize="Large"
                   FontAttributes="Bold" />
            <Label Grid.Row="2" Text="DENIED" />
            <Label x:Name="denyLabel" Grid.Row="3" Text="0" FontSize="Large"
                   FontAttributes="Bold" />
        </Grid>
    </Grid>

</ContentPage>
