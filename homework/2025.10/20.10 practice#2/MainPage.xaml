<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tictactoe.MainPage"
             MinimumWidthRequest="300"
             BackgroundColor="#a49ba0">

    <VerticalStackLayout x:Name="AppLayout" Padding="20">
        <Label Text="Крестики нолики" HorizontalOptions="Center"
               FontSize="20" FontFamily="UbuntuRegular"/>

        <Border StrokeThickness="0" Margin="0,70,0,0">
            <Grid x:Name="GameHolder"
                  HeightRequest="{Binding Source={x:Reference GameHolder}, Path=Width }"
                  ColumnDefinitions="*,*,*" RowDefinitions="*,*,*">


                <Button Grid.Column="0" BackgroundColor="#b4ebe6" CornerRadius="0" BorderColor="Gray" BorderWidth="1" 
                        x:Name="r1c1" Clicked="Button_Clicked" FontFamily="UbuntuBold" FontSize="40" TextColor="Black"/>
                <Button Grid.Column="1" BackgroundColor="#b4ebe6" CornerRadius="0" BorderColor="Gray" BorderWidth="1" 
                        x:Name="r1c2" Clicked="Button_Clicked" FontFamily="UbuntuBold" FontSize="40" TextColor="Black"/>
                <Button Grid.Column="2" BackgroundColor="#b4ebe6" CornerRadius="0" BorderColor="Gray" BorderWidth="1" 
                        x:Name="r1c3" Clicked="Button_Clicked" FontFamily="UbuntuBold" FontSize="40" TextColor="Black"/>

                <Button Grid.Column="0" Grid.Row="1" BackgroundColor="#b4ebe6" CornerRadius="0" BorderColor="Gray" BorderWidth="1" 
                        x:Name="r2c1" Clicked="Button_Clicked" FontFamily="UbuntuBold" FontSize="40" TextColor="Black"/>
                <Button Grid.Column="1" Grid.Row="1" BackgroundColor="#b4ebe6" CornerRadius="0" BorderColor="Gray" BorderWidth="1" 
                        x:Name="r2c2" Clicked="Button_Clicked" FontFamily="UbuntuBold" FontSize="40" TextColor="Black"/>
                <Button Grid.Column="2" Grid.Row="1" BackgroundColor="#b4ebe6" CornerRadius="0" BorderColor="Gray" BorderWidth="1" 
                        x:Name="r2c3" Clicked="Button_Clicked" FontFamily="UbuntuBold" FontSize="40" TextColor="Black"/>

                <Button Grid.Column="0" Grid.Row="2" BackgroundColor="#b4ebe6" CornerRadius="0" BorderColor="Gray" BorderWidth="1" 
                        x:Name="r3c1" Clicked="Button_Clicked" FontFamily="UbuntuBold" FontSize="40" TextColor="Black"/>
                <Button Grid.Column="1" Grid.Row="2" BackgroundColor="#b4ebe6" CornerRadius="0" BorderColor="Gray" BorderWidth="1" 
                        x:Name="r3c2" Clicked="Button_Clicked" FontFamily="UbuntuBold" FontSize="40" TextColor="Black"/>
                <Button Grid.Column="2" Grid.Row="2" BackgroundColor="#b4ebe6" CornerRadius="0" BorderColor="Gray" BorderWidth="1" 
                        x:Name="r3c3" Clicked="Button_Clicked" FontFamily="UbuntuBold" FontSize="40" TextColor="Black"/>
            </Grid>
        </Border>

        <VerticalStackLayout Margin="0,50,0,0">
            <Label x:Name="Info" Text="Ходит: X" FontFamily="UbuntuBold" FontSize="40" HorizontalOptions="Center"/>
            <Button x:Name="Reset" Text="Сброс" HorizontalOptions="Center" Clicked="Reset_Clicked"/>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>
