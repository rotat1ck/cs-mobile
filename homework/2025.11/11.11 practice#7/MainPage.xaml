<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:practice7"
             x:Class="practice7.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:DataViewModel x:Key="vm"/>
            <local:DateOnlyConverter x:Key="converter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout BindingContext="{StaticResource vm}">
        <Grid Padding="10" ColumnDefinitions="Auto,*">
            <Label Grid.Column="0" Text="Фамилия: " VerticalTextAlignment="Center"/>
            <Entry Grid.Column="1" Text="{Binding LastName}"/>
        </Grid>
        <Grid Padding="10" ColumnDefinitions="Auto,*">
            <Label Grid.Column="0" Text="Имя: " VerticalTextAlignment="Center"/>
            <Entry Grid.Column="1" Text="{Binding FirstName}"/>
        </Grid>
        <Grid Padding="10" ColumnDefinitions="Auto,*">
            <Label Grid.Column="0" Text="Отчество: " VerticalTextAlignment="Center"/>
            <Entry Grid.Column="1" Text="{Binding MiddleName}"/>
        </Grid>
        <HorizontalStackLayout Padding="10">
            <Label Text="Пол: " VerticalTextAlignment="Center"/>
            <Picker ItemsSource="{Binding Sexes}" SelectedItem="{Binding Sex}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Padding="10">
            <Label Text="Дата рождения: " VerticalTextAlignment="Center"/>
            <DatePicker Date="{Binding BirthDate, Converter={StaticResource converter}}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Padding="10">
            <Label Text="Замужем?" VerticalTextAlignment="Center"/>
            <Switch IsToggled="False" Margin="10,0,0,0"/>
        </HorizontalStackLayout>
        <VerticalStackLayout Padding="10">
            <Label Text="Дополнительная информация: " VerticalTextAlignment="Center"/>
            <Editor AutoSize="TextChanges"/> 
        </VerticalStackLayout>

        <Button Text="Сохранить" Margin="10,30,10,10" Command="{Binding saveCommand}"/>
    </StackLayout>

</ContentPage>
